@model PagedList<MVCResumeSite.Models.Post>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Blog</h2>




    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Bryants Blog</h1>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <!-- /.input-group -->
<div class="col-md-8">
    <div class="container">



        @foreach (var item in Model)
        {


            <div class="row">
                <h2 class="post-title">
                    @Html.DisplayFor(modelItem => item.Title)
                </h2>
                <div class="bodyText">
                    @Html.DisplayFor(modelItem => item.Body)

                </div>

                <h5 class="row">

                    @Html.DisplayFor(modelItem => item.MediaUrl)

                    
                </h5>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br />
                @Html.ActionLink("Details", "Details", new { id = item.Id }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </p>





            <p class="post-meta">Posted by Bryant Milliren @Html.DisplayFor(modelItem => item.DateCreated)</p>
        </div>

        }
        <hr>

    </div>
    <ul class="pager">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, ViewBag.Query }))
    </ul>

</div>



<div class="col-md-4">
    <div class="well">
        <h4>Blog Search</h4>
        <form action="@Url.Action("Index")" method="get">
            <div class="input-group">

                <input type="text" id="query" name="query" class="form-control">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>
           

    
@section Scripts {
<script src="/Scripts/jquery.dotdotdot.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".bodyText").dotdotdot({
            watch: true
        });
    });
</script>




}